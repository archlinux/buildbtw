{% extends "layout" %}
{% block title %}{{ super() }} - build_namespace {% endblock %}
{% block body %}
    <h1><a href="/namespace/{{namespace.name}}/graph">{{ namespace.name }}</a></h1>
    <iframe id="graph-iframe" src="/namespace/{{namespace.name}}/graph" style="width: 100%; height: 30rem;">

    </iframe>

    <p>Status: {{namespace.status}}</p>
    <h2>Current iteration</h2>
    {{ svg }}
    <h2>All iterations</h2>
    <ul>
        {% for iteration in iterations %}
            <li>
                {{ iteration.id }} ({{ iteration.create_reason }})
            </li>
        {% endfor %}
    </ul>
{% endblock %}
